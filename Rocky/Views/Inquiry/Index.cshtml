<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Inquiry List</h2>
        </div>
</div>
    </div>
    <div class="container-fluid">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead> <tr> <th>Name</th> <th>Phone</th> <th>Product Name</th> <th>Status</th> <th>User</th> <th>Price</th><th></th> </tr> </thead> 
                <tbody>
                    @foreach (var item in ViewBag.inquiry)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            @foreach (var i in ViewBag.product)
                            {
                                @if (i.Id == item.Produtid)
                                {
                                    <td>@i.Name</td>

                                }
                            }
                            <td>@item.status</td>
                            <td>@item.user</td>
                            <td>@item.price</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Inquiry" asp-route-Id="@item.Id" asp-action="Status" class="btn btn-primary mx-2">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
